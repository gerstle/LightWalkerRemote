<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robobunny="http://robobunny.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:key="pulse_preferences">

    <com.inappropirates.lightwalker.ui.SeekBarPreference
        android:defaultValue="200"
        android:key="pulseMinRate"
        android:max="2000"
        android:title="min pulse rate (ms)"
        robobunny:min="200"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />

    <com.inappropirates.lightwalker.ui.SeekBarPreference
        android:defaultValue="4500"
        android:key="pulseMaxRate"
        android:max="10000"
        android:title="max pulse rate (ms)"
        robobunny:min="250"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="pulseSyncLegs"
        android:title="synchronize legs" />

    <com.inappropirates.lightwalker.ui.ColorPickerPreference
        android:key="pulseColor"
        android:title="color" />

