<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:robobunny="http://robobunny.com"
       android:key="chaos_preferences" android:layout_height="match_parent" android:layout_width="match_parent">
       
    <com.inappropirates.lightwalker.ui.SeekBarPreference
        android:key="chaosMinValue"
        android:title="min value"
        android:defaultValue="100"
        robobunny:min="20"
        android:max="200"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />

    <com.inappropirates.lightwalker.ui.SeekBarPreference
        android:key="chaosStepLength"
        android:title="step length"
        android:defaultValue="1250"
        robobunny:min="500"
        android:max="4000"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />    
    
    <com.inappropirates.lightwalker.ui.SeekBarPreference
        android:key="chaosSpeed"
        android:title="speed"
        android:defaultValue="4"
        robobunny:min="0"
        android:max="30"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />

    <com.inappropirates.lightwalker.ui.SeekBarPreference
        android:key="chaosSwing"
        android:title="color variance"
        android:defaultValue="30"
        robobunny:min="0"
        android:max="100"
        robobunny:unitsLeft=""
        robobunny:unitsRight="" />

    
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="chaosSparse"
        android:title="sparse mode" />       
    
    <com.inappropirates.lightwalker.ui.ColorPickerPreference
        android:key="chaosColor"
        android:title="color"
        />
</PreferenceScreen>