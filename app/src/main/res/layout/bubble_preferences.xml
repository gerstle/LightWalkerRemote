<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robobunny="http://robobunny.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:key="bubble_preferences">

    <com.robobunny.SeekBarPreference
        android:defaultValue="1"
        android:key="bubbleSpeed"
        android:max="5"
        android:title="speed"
        robobunny:min="1" />

    <com.robobunny.SeekBarPreference
        android:defaultValue="3"
        android:key="bubbleWidth"
        android:max="20"
        android:title="bubble width"
        robobunny:min="1" />

    <com.inappropirates.util.ColorPickerPreference
        android:key="bubbleBackgroundColor"
        android:title="background color" />

    <com.inappropirates.util.ColorPickerPreference
        android:key="bubbleBubbleColor"
        android:title="bubble color" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="bubbleTrail"
        android:title="leave a trail?" />
</PreferenceScreen>