<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robobunny="http://robobunny.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:key="equalizer_preferences">

    <ListPreference
        android:defaultValue="2"
        android:entries="@array/equalizerModes"
        android:entryValues="@array/equalizerModeValues"
        android:key="eqMode"
        android:title="mode"></ListPreference>

    <com.robobunny.SeekBarPreference
        android:defaultValue="175"
        android:key="eqMinValue"
        android:max="255"
        android:title="Min Brightness"
        robobunny:min="0" />

    <com.inappropirates.util.ColorPickerPreference
        android:key="eqColor"
        android:title="color" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="eqAllBands"
        android:title="all bands" />

</PreferenceScreen>